{{!< default}}
{{!  loads default }}
<div class="granite-background-image">
    <div class="granite-blur">
    </div>
    <div class="jumbotron-fluid granite-landing">
        <div class="granite-line-wrapper">
            <div class="granite-landing-wrap container">
                <h1 class="display-2 animated fadeInUp">{{ @blog.title }}</h1>
                <p class="animated fadeInUp">{{ @blog.description }}</p>
                <div class="row granite-ctas animated fadeInUp">
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <a href="#">First Post Name</a>
                    </div>
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <a href="#" >Gallery</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End of cover section -->

{{! FEATURED POST }}
<div class="container-fluid granite-divider"></div>
{{#foreach posts}}
{{#if featured}}
<div class="container-fluid granite-post">
    <div class="container">
        <h2 class="text-center">{{title}}</h2>
        <hr>
        {{content}}
    </div>
</div>
{{/if}}
{{/foreach}}

{{! MAP CANVAS }}
<div class="container-fluid" id="map"></div>

{{! GALLERY }}

<div class="container-fluid granite-gallery">
    <div class="container">
        <h2>Gallery</h2>
        <hr>
        <div class="row granite-image-gallery">
        {{#foreach posts}}
        {{#has tag="image"}}
            <div class="col-lg-3 col-md-4 col-sm-6 image-holder">
                <div class="grt-gallery-image-wrapper">
                    <img src="{{image}}" />
                    <h6>{{title}}</h6>
                </div>
            </div>
        {{/has}}
        {{/foreach}}
        </div>
    </div>
</div>

{{#foreach posts}}
{{^has tag="image"}}
{{^if featured}}
<div class="container-fluid granite-post">
    <div class="container">
        <h2 class="text-center">{{title}}</h2>
        <hr>
        {{content}}
    </div>
</div>
{{/if}}
{{/has}}
{{/foreach}}


